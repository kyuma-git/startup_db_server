
<div style="padding: 0 20px;">
  <p>
    <%= form_tag import_companies_path, multipart: true do %>
        <span><%= file_field_tag :file %></span>
        <span><%= file_field_tag :file %></span>
        <p><%= submit_tag "インポート" %></p>
    <% end %>
  </p>

  <p>
    <%= form_with(scope: :search, url: companies_path, method: :get, local: true) do |f| %>
      <%= f.submit('全ての企業') %>
    <% end %>
  </p>
</div>

<div style="padding: 50px 10px;">
  <%= form_with(scope: :search, url: companies_path, method: :get, local: true) do |f| %>
    <%= f.text_field :name, :placeholder => "企業名を入力" %>
    <%= f.select :country_id , Country.all.map { |c| [c.name, c.id] }.to_h, :prompt => "国を選択" %>
    <%= f.select :funding_stage_id , FundingStage.all.map { |c| [c.name, c.id] }.to_h,  :prompt => "ステージを選択" %>
    <%= f.select :industry, [["ヘルスケア", "ヘルスケア"], ["医療", "医療"],  ["ソフトウェア", "ソフトウェア"], ["半導体", "半導体"],["不動産", "不動産"]], :prompt => "業界を選択" %>
    <%= f.submit('検索') %>
  <% end %>
</div>

<table style="margin-top: 30px;">
  <thead>
    <tr>
      <th style="background-color: #F2F2F2;">ID</th>
      <th style="background-color: #F2F2F2;">名前</th>
      <th style="background-color: #F2F2F2;">概要</th>
      <th style="background-color: #F2F2F2;">設立者</th>
      <th style="background-color: #F2F2F2;">業種</th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |c| %>
      <tr>
        <td style="background-color: #F2F2F2;"><%= c.id %></td>
        <td style="background-color: #E0ECF8;"><%= c.name %></td>
        <td style="background-color: #F8ECE0;"><%= c.description %></td>
        <td style="background-color: #F8ECE0;"><%= c.founder %></td>
        <td style="background-color: #F8ECE0;"><%= c.industry %></td>
      </tr>
    <% end %>
  </tbody>
</table>
